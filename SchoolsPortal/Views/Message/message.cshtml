<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home Page</title>
    <link rel="stylesheet" href="~/styles.css">
    <script src="~/Scripts/JavaScript.js"></script>
</head>
<body>
    <div id="wholehomepage">
        <div id="navbar">
            <ul id="main-menu" class="sm sm-blue">
                <li><a href="~/Home">Home</a></li>
                <li><a href="#news">News</a></li>
                <li class="dropdown">
                    <a href="javascript:void(0)" class="dropbtn">Dropdown</a>
                    <div class="dropdown-content">
                        <a href="#">Link 1</a>
                        <a href="#">Link 2</a>
                        <a href="#">Link 3</a>
                    </div>
                </li>
            </ul>
        </div>
        <br />
        <div id="messages">
            <table id="tables">
                <tr>
                    <th colspan="3">@ViewBag.Message[0].getmessagetitle()</th>
                </tr>
                <tr>
                    <th>Date</th>
                    <th>Message</th>
                    <th>From</th>
                </tr>
                @foreach (dynamic p in (ViewBag.Message))
                {
                <tr>
                    <td>@p.getsenddate().ToShortDateString()</td>
                    <td>@p.getmessagetext()</td>
                    <td>@p.getfrom().getfirstname() @p.getfrom().getlastname() </td>
                </tr>
                }
            </table>
        </div>
    </div>
</body>
</html>